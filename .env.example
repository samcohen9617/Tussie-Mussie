# Client-side environment variables
# Note: All client-side variables must start with VITE_

# API URL configuration
# Empty for integrated development (Replit)
# Use absolute URL for separate frontend/backend (localhost)
VITE_API_BASE_URL=

# Game configuration
VITE_GAME_REFRESH_INTERVAL=2000

# Feature flags
VITE_ENABLE_TUTORIAL=true
VITE_ENABLE_ANIMATIONS=true